<%= stylesheet_link_tag "fc_styles/#{ @calender_type }" %>
<%= javascript_include_tag "fullcalendar_#{ @calender_type }" %>
<% that_name = CalendarController::SOURCES[ @calender_type ] %>

<div id="headline">
    <div class="box heading">
        <h1><%= that_name %><%= raw(" <em>(original)</em>") if @calender_type == 'arshaw' %></h1>
    </div>
    <div class="box source">
        <%= link_to "#{ that_name } @ Github", "https://github.com/#{ that_name }/fullcalendar", :target => '_blank' %>
    </div>
    <div class="box links">
        <%= link_to "new Event", new_event_path, :class => "actionlink" %> | 
        <%= link_to "new Person", new_person_path, :class => "actionlink" %>
    </div>
    <div class="clearfix"></div>
</div>
<div class="clearfix"></div>



<div id='external-events'>
    <h4>Draggable Events</h4>
    <% Person.all.each_with_index do |psn, i| %>
        <div class='external-event' data-employee='<%= psn.id %>' style="background:<%= psn.bg_color %>; color:<%= psn.txt_color %>"><%= "#{psn.first_name}Â´s Task" %></div>
    <% end %>
    <p>
        <input type='checkbox' id='drop-remove' /> <label for='drop-remove'>remove after drop</label><br/><br/>
        <input type='checkbox' id='drop-correction' /> <label for='drop-correction'>ask for correction</label><br/><br/>
        <input type='checkbox' id='drop-resourced' /> <label for='drop-resourced'>by resource</label><br/><br/>
    </p>
</div>

<div id='calendar' class="with_aside"></div>

<div class="clearfix"></div>


<%= render "dialog" %>